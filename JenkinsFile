/* groovylint-disable-next-line CompileStatic */
pipeline {
    agent any

    parameters {
        string(name:'SPEC', defaultValue:'cypress/e2e/**/**', discription:'enter the path that yout want to build')
        choice(name:'BROWSER', choices: ['chrome', 'edge', 'firefox'], discription:'browser choices')
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'

                steps {
                    bat 'npm i'
                    bat 'npx cypress run --browser=${BROWSER} --env TAGS=@smoke,allure=true'
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
    post {
        always {
            allure includeProperties: false, jdk: '', results: [[path: 'allure-results']]
        }
    }
}
