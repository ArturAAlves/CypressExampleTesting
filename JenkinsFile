/* groovylint-disable-next-line CompileStatic */
pipeline {
    agent any

    parameters {
        string(name:'SPEC', defaultValue:'cypress/e2e/**/**', description:'enter the path that yout want to build')
        choice(name:'BROWSER', choices: ['chrome', 'edge', 'firefox'], description:'browser choices')
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
          
                steps {
                    bat 'npm i'
                    bat 'npx cypress run -e allure=true --browser=${BROWSER}'
                }
                
                 steps {
                echo 'testing..'
                  }
         
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
    post {
        always {
            allure includeProperties: false, jdk: '', results: [[path: 'allure-results']]
        }
    }
}
